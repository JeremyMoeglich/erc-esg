{
	"name": "erc-esg",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "npm run updateprisma && svelte-kit build",
		"complete_build": "npm run checkup && npm run build",
		"server_setup": "pnpm install --frozen-lockfile && npx playwright install && prisma db pull && npm run complete_build",
		"package": "svelte-kit package",
		"start": "dotenv -- pm2 restart ./build/index.js",
		"preview": "svelte-kit preview",
		"updateprisma": "prisma generate",
		"prepare": "svelte-kit sync",
		"test": "playwright test",
		"checkup": "npm run updateprisma && npm run format && npm run lint && npm run check && npm run test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@playwright/test": "^1.22.2",
		"@prisma/client": "^3.14.0",
		"@sveltejs/adapter-node": "1.0.0-next.73",
		"@sveltejs/kit": "next",
		"@types/bcrypt": "^5.0.0",
		"@types/codemirror": "^5.60.5",
		"@types/cookie": "^0.5.1",
		"@types/js-cookie": "^3.0.2",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"autoprefixer": "^10.4.7",
		"bcrypt": "^5.0.1",
		"carbon-icons-svelte": "^11.0.1",
		"carbon-preprocess-svelte": "^0.9.0",
		"cookie": "^0.5.0",
		"dotenv": "^16.0.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"imagekit": "^3.2.5",
		"postcss": "^8.4.14",
		"postcss-load-config": "^3.1.4",
		"postcss-nested": "^5.0.6",
		"postcss-scss": "^4.0.4",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^3.14.0",
		"sass": "^1.52.1",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.4.0",
		"type-fest": "^2.13.0",
		"typescript": "~4.6.4"
	},
	"type": "module",
	"dependencies": {
		"@bytemd/plugin-gfm": "^1.15.0",
		"@types/lodash-es": "^4.17.6",
		"bytemd": "^1.15.0",
		"cuid": "^2.1.8",
		"functional-utilities": "^1.15.1",
		"js-cookie": "^3.0.1",
		"lodash-es": "^4.17.21",
		"svelte-file-dropzone": "1.0.0-dev.1",
		"svelte-hamburgers": "^4.0.1",
		"svelte-lazy": "^1.1.0",
		"svelte-loading-spinners": "^0.1.7",
		"svelte-use-click-outside": "^1.0.0"
	}
}
