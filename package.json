{
	"name": "erc-esg",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "npm run updateprisma && vite build",
		"build:static": "cross-env ADAPTER=static npm run build",
		"build:node": "cross-env ADAPTER=node npm run build",
		"complete_build": "npm run checkup && npm run build",
		"server_setup": "pnpm install --frozen-lockfile && npx playwright install && npx playwright install-deps && npm run complete_build",
		"package": "svelte-kit package",
		"start": "dotenv -- pm2 reload ./build/index.js --update-env",
		"preview": "svelte-kit preview",
		"updateprisma": "prisma generate",
		"prepare": "svelte-kit sync",
		"test": "playwright test",
		"checkup": "npm run updateprisma && npm run format && npm run lint && npm run check && npm run test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@playwright/test": "^1.25.1",
		"@prisma/client": "^4.2.1",
		"@sveltejs/adapter-node": "1.0.0-next.87",
		"@sveltejs/adapter-static": "1.0.0-next.39",
		"@sveltejs/kit": "1.0.0-next.437",
		"@types/bcrypt": "^5.0.0",
		"@types/codemirror": "^5.60.5",
		"@types/cookie": "^0.5.1",
		"@types/js-cookie": "^3.0.2",
		"@types/lodash-es": "^4.17.6",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"autoprefixer": "^10.4.8",
		"bcrypt": "^5.0.1",
		"carbon-icons-svelte": "^11.2.0",
		"carbon-preprocess-svelte": "^0.9.1",
		"cookie": "^0.5.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"dotenv-cli": "^6.0.0",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"imagekit": "^4.1.1",
		"postcss": "^8.4.16",
		"postcss-load-config": "^4.0.1",
		"postcss-nested": "^5.0.6",
		"postcss-scss": "^4.0.4",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^4.2.1",
		"sass": "^1.54.5",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"type-fest": "^2.19.0",
		"typescript": "~4.7.4",
		"vite": "^3.0.9"
	},
	"type": "module",
	"dependencies": {
		"@bytemd/plugin-gfm": "^1.17.2",
		"@xobotyi/scrollbar-width": "^1.9.5",
		"bytemd": "^1.17.2",
		"cuid": "^2.1.8",
		"functional-utilities": "^1.16.1",
		"js-cookie": "^3.0.1",
		"lodash-es": "^4.17.21",
		"svelte-hamburgers": "^4.0.1",
		"svelte-loading-spinners": "^0.1.7",
		"svelte-use-click-outside": "^1.0.0",
		"zod": "^3.18.0"
	}
}
