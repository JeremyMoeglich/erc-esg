{
	"name": "erc-esg",
	"version": "0.2.0",
	"scripts": {
		"dev": "dotenv -e .env.serverless -- vite dev",
		"build": "npm run updateprisma && vite build",
		"build:node": "cross-env ADAPTER=node npm run build",
		"build:vercel": "cross-env ADAPTER=vercel dotenv -e .env.serverless -- npm run build",
		"start": "dotenv -e .env.serverless -- pm2 reload ./build/index.js --update-env",
		"preview": "vite preview",
		"updateprisma": "dotenv -e .env.serverless -- prisma generate --data-proxy",
		"test": "playwright test",
		"checkup": "npm run updateprisma && npm run format && npm run lint && npm run check && npm run test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"migrate": "dotenv -e .env.node -- prisma db push",
		"postinstall": "npm run updateprisma",
		"studio": "dotenv -e .env.node -- prisma studio"
	},
	"devDependencies": {
		"@playwright/test": "^1.31.2",
		"@sveltejs/adapter-node": "1.2.2",
		"@sveltejs/adapter-static": "2.0.1",
		"@sveltejs/adapter-vercel": "2.3.1",
		"@sveltejs/kit": "1.11.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/cookie": "^0.5.1",
		"@types/js-cookie": "^3.0.3",
		"@types/lodash-es": "^4.17.7",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"autoprefixer": "^10.4.14",
		"carbon-icons-svelte": "^11.4.0",
		"carbon-preprocess-svelte": "^0.9.1",
		"cookie": "^0.5.0",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^7.1.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"postcss-nested": "^6.0.1",
		"postcss-scss": "^4.0.6",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"prisma": "^4.11.0",
		"sass": "^1.59.3",
		"svelte": "^3.56.0",
		"svelte-check": "^3.1.4",
		"svelte-preprocess": "^5.0.2",
		"tslib": "^2.5.0",
		"type-fest": "^3.6.1",
		"typescript": "~4.9.5",
		"vite": "^4.1.4"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "4.11.0",
		"@tinymce/tinymce-svelte": "^1.0.0",
		"@types/nodemailer": "^6.4.7",
		"@xobotyi/scrollbar-width": "^1.9.5",
		"bcryptjs": "^2.4.3",
		"disable-scroll": "^0.6.0",
		"functional-utilities": "^2.0.1",
		"js-cookie": "^3.0.1",
		"lodash-es": "^4.17.21",
		"nodemailer": "^6.9.1",
		"svelte-carousel": "^1.0.23",
		"svelte-hamburgers": "^4.0.1",
		"svelte-lazy": "^1.2.1",
		"svelte-loading-spinners": "^0.3.4",
		"svelte-use-click-outside": "^1.0.0",
		"uuid": "^9.0.0",
		"zod": "^3.21.4"
	}
}
