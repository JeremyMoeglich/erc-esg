{
	"name": "erc-esg",
	"version": "0.2.0",
	"scripts": {
		"dev": "dotenv -e .env.serverless -- vite dev",
		"build": "npm run updateprisma && vite build",
		"build:static": "cross-env ADAPTER=static dotenv -e .env.serverless -- npm run build",
		"build:node": "cross-env ADAPTER=node npm run build",
		"build:vercel": "cross-env ADAPTER=vercel dotenv -e .env.serverless -- npm run build",
		"start": "dotenv -e .env.serverless -- pm2 reload ./build/index.js --update-env",
		"preview": "vite preview",
		"updateprisma": "dotenv -e .env.serverless -- prisma generate --data-proxy",
		"test": "playwright test",
		"checkup": "npm run updateprisma && npm run format && npm run lint && npm run check && npm run test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"migrate:dev": "dotenv -e .env.node -- prisma migrate dev --name"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-node": "1.0.0-next.101",
		"@sveltejs/adapter-static": "1.0.0-next.48",
		"@sveltejs/kit": "1.0.0-next.560",
		"@types/codemirror": "^5.60.5",
		"@types/cookie": "^0.5.1",
		"@types/js-cookie": "^3.0.2",
		"@types/lodash-es": "^4.17.6",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.44.0",
		"@typescript-eslint/parser": "^5.44.0",
		"autoprefixer": "^10.4.13",
		"carbon-icons-svelte": "^11.4.0",
		"carbon-preprocess-svelte": "^0.9.1",
		"cookie": "^0.5.0",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^6.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.19",
		"postcss-load-config": "^4.0.1",
		"postcss-nested": "^6.0.0",
		"postcss-scss": "^4.0.5",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prisma": "^4.6.1",
		"sass": "^1.56.1",
		"svelte": "^3.53.1",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.1",
		"type-fest": "^3.2.0",
		"typescript": "~4.9.3",
		"vite": "^3.2.4"
	},
	"type": "module",
	"dependencies": {
		"@editorjs/editorjs": "^2.25.0",
		"@editorjs/header": "^2.6.2",
		"@editorjs/list": "^1.7.0",
		"@prisma/client": "^4.6.1",
		"@sveltejs/adapter-vercel": "1.0.0-next.84",
		"@types/bcryptjs": "^2.4.2",
		"@xobotyi/scrollbar-width": "^1.9.5",
		"bcryptjs": "^2.4.3",
		"cuid": "^2.1.8",
		"editorjs-viewer": "^1.1.3",
		"functional-utilities": "^1.18.0",
		"js-cookie": "^3.0.1",
		"lodash-es": "^4.17.21",
		"svelte-hamburgers": "^4.0.1",
		"svelte-loading-spinners": "^0.3.4",
		"svelte-use-click-outside": "^1.0.0",
		"zod": "^3.19.1"
	}
}
