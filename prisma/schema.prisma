generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model ContactForm {
    id        String   @id @default(cuid())
    name      String
    email     String
    phone     String?
    message   String
    createdAt DateTime @default(now())
}

model User {
    id            String @id @default(cuid())
    name          String
    email         String @unique
    password_hash String
    role          Role   @default(user)
    tag           String @default("")
}

model LoginToken {
    id     String   @id @default(cuid())
    userId String   @unique
    time   DateTime @default(now())
    value  String   @unique
}

model imageLink {
    id        String    @id @unique
    image_url String
    Article   Article[]
}

model Article {
    id          String    @id @default(cuid())
    title       String
    content     String
    createdAt   DateTime  @default(now())
    imageLinkId String
    hidden      Boolean   @default(false)
    image_link  imageLink @relation(fields: [imageLinkId], references: [id])
}

enum Role {
    root
    admin
    user
}
