// For testing

datasource db {
    provider = "postgresql"
    url      = env("PRISMA_DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Item {
    id            Int         @id @default(autoincrement())
    name          String
    description   String
    price         Int
    subcategory   SubCategory @relation(fields: [subcategoryId], references: [id])
    subcategoryId Int
}

model Category {
    id            Int           @id @default(autoincrement())
    name          String
    description   String
    subcategories SubCategory[]
}

model SubCategory {
    id          Int      @id @default(autoincrement())
    name        String
    description String
    items       Item[]
    category    Category @relation(fields: [categoryId], references: [id])
    categoryId  Int
}

model User {
    id            Int    @id @default(autoincrement())
    name          String
    email         String
    password_hash String
}
